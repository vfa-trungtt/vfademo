<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
android:background="@drawable/play_history_item_bg_selector"
    android:layout_height="66dp">
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/tvScoreSum"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="18dp"
            android:gravity="right"
            android:text="108"
            android:textColor="@color/golf_search_item_clubname_selector"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPut"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvScore"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/tvScoreSum"
            android:gravity="bottom"
            android:paddingLeft="5dp"
            android:text="30"
            android:textColor="@color/golf_search_item_clubname_selector"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_left"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/play_date"
            android:layout_width="fill_parent"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:paddingLeft="4dp"
            android:textColor="@color/golf_search_item_clubname_selector"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/live_label"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="27dp"
                    android:src="@drawable/label_live"
                    android:visibility="gone"/>
            <ImageView
                    android:id="@+id/gora_up"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/gora_logo"
                    android:layout_height="27dp"
                    android:layout_marginLeft="3dp"
                    android:visibility="gone"/>

            <ImageView
                android:id="@+id/agency_icon"
                android:layout_width="26.6dp"
                android:layout_height="27dp"
                android:layout_marginLeft="3dp"
                android:visibility="gone"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/upload_scores"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_date"
            android:layout_marginTop="-4dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/golf_search_item_clubname_selector"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray8"/>
</LinearLayout>