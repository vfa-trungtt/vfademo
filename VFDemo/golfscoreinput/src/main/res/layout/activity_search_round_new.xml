<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_new_group"

    android:background="@color/white">
    <include
        android:id="@+id/top_menu_layout"
        layout="@layout/header_layout" />
    <LinearLayout
        android:id="@+id/step_bar_layout_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/top_menu_layout"
        android:background="@drawable/nav_background_center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/nav_search_course"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/nav_round"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/nav_partner"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_below="@+id/step_bar_layout_new"
    style="@style/background_text_new_group_360_480"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/background_text_new_group_360_480">
            <include
                android:visibility="visible"
                layout="@layout/act_round_new_1"/>
           <include
               android:visibility="visible"
               layout="@layout/act_round_new_2"/>

            <!--GROUP 3-->
            <include
                android:visibility="visible"
                layout="@layout/act_round_new_3"/>
            <!--GROUP 4-->
            <include
                android:visibility="visible"
                layout="@layout/act_round_new_4"/>

            <include
                android:visibility="visible"
                layout="@layout/act_round_new_bottom"/>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/stroke_handicap_edit_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/score_bg_repeat"
        android:clickable="true"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/handicap_control_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradation_score_entry_top_menu_bg"
            android:padding="5dp">

            <Button
                android:id="@+id/btnCancelHandicap"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_edit_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnStoreHandicap"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_edit_selector"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rel_game_point1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/handicap_control_layout"
            android:layout_margin="1dp"
            android:background="@color/violet"
            android:orientation="horizontal"
            android:padding="3dp">

            <ListView
                android:id="@+id/stroke_handicap_lst1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/violet"
                android:dividerHeight="3dp"
                android:footerDividersEnabled="false" />

            <ListView
                android:id="@+id/stroke_handicap_lst2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/violet"
                android:dividerHeight="3dp"
                android:footerDividersEnabled="false" />
        </LinearLayout>
        <!-- for puma -->
        <TextView
            android:id="@+id/tvDHCP_hint"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDHCP2_hint"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDHCP3_hint"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDHCP4_hint"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone" />
        <!-- End -->
    </RelativeLayout>
</RelativeLayout>