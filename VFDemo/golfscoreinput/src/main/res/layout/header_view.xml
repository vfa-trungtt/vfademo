<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_add_gift">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/lv_movie_show"
        android:visibility="gone"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="7"
            >

            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:fadeScrollbars="true"
                android:id="@+id/rvCyc"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:weightSum="2"
                android:background="@drawable/btn_tv_bg"
                android:layout_gravity="center"
                android:id="@+id/lv_button_movie"
                android:gravity="center"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_club_new"
                    android:layout_gravity="center"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/tv_icon_movie_focus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/btn_top_tv"
                    android:gravity="center_horizontal"
                    android:textSize="14dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:lineSpacingExtra="3dp"
                    android:id="@+id/textView5" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>