<?xml version="1.0" ?>
<!-- LANDSCAPE -->
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="InconsistentLayout">

    <LinearLayout
        android:id="@+id/io_repro_android_message_main_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/io_repro_android_message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/io_repro_android_message_text_wrapper"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/io_repro_android_message_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                    android:layout_marginTop="@dimen/io_repro_android_base_view_content_vertical_margin_dialog_landscape"
                    android:layout_marginRight="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                    android:textColor="#303030"
                    android:textSize="@dimen/io_repro_android_text_size_title"
                    android:maxLines="3"
                    android:gravity="left" />

                <io.repro.android.message.MultiLineTextView
                    android:id="@+id/io_repro_android_message_subtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                    android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_dialog_landscape"
                    android:layout_marginRight="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                    android:paddingBottom="3dp"
                    android:gravity="center_horizontal"
                    android:scrollHorizontally="true" />

            </LinearLayout>

            <io.repro.android.message.RoundCornerButton
                android:id="@+id/io_repro_android_message_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/io_repro_android_cta_button_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_dialog_landscape"
                android:layout_marginRight="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                android:text="@string/io_repro_android_done"
                android:textColor="@android:color/white"
                android:textSize="@dimen/io_repro_android_text_size_button"
                android:maxLines="1"
                style="@style/io_repro_android_InAppButton"
                />

            <LinearLayout
                android:id="@+id/io_repro_android_message_button2_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_dialog_landscape"
                android:layout_marginRight="@dimen/io_repro_android_base_view_content_horizontal_margin_dialog_landscape"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone" >
                <io.repro.android.message.RoundCornerButton
                    android:id="@+id/io_repro_android_message_button_1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/io_repro_android_cta_button_height"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/io_repro_android_two_button_distance_div_2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/io_repro_android_text_size_button"
                    android:maxLines="1"
                    style="@style/io_repro_android_InAppButton"
                    />
                <io.repro.android.message.RoundCornerButton
                    android:id="@+id/io_repro_android_message_button_2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/io_repro_android_cta_button_height"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/io_repro_android_two_button_distance_div_2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/io_repro_android_text_size_button"
                    android:maxLines="1"
                    style="@style/io_repro_android_InAppButton"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/io_repro_android_labels_vertical_margin_dialog_landscape"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/io_repro_android_message_close_button"
        android:layout_width="@dimen/io_repro_android_close_button_side_size"
        android:layout_height="@dimen/io_repro_android_close_button_side_size"
        android:layout_alignTop="@id/io_repro_android_message_main_wrapper"
        android:layout_alignRight="@id/io_repro_android_message_main_wrapper"
        android:layout_marginTop="@dimen/io_repro_android_close_button_top_margin_dialog"
        android:layout_marginRight="@dimen/io_repro_android_close_button_right_margin_dialog"
        android:background="@drawable/io_repro_android_close" />

</RelativeLayout>
