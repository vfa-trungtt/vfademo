<?xml version="1.0" ?>
<!-- PORTRAIT -->
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/io_repro_android_message_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="InconsistentLayout">

    <LinearLayout
        android:id="@+id/io_repro_android_message_bottom_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/io_repro_android_button_exit_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/io_repro_android_close_button_top_margin_overlay"
            android:layout_marginRight="@dimen/io_repro_android_close_button_right_margin_overlay"
            android:layout_marginBottom="@dimen/io_repro_android_close_button_base_view_distance_overlay_portrait"
            >

            <ImageView
                android:layout_width="@dimen/io_repro_android_close_button_side_size"
                android:layout_height="@dimen/io_repro_android_close_button_side_size"
                android:background="@drawable/io_repro_android_close" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <FrameLayout
                android:id="@+id/io_repro_android_message_image_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

                <io.repro.android.message.FadingImageView
                    android:id="@+id/io_repro_android_message_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/io_repro_android_message_text_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:id="@+id/io_repro_android_message_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_portrait"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:maxLines="3" />

                <TextView
                    android:id="@+id/io_repro_android_message_subtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_portrait"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="#e0e0e0"
                    android:maxLines="7" />

            </LinearLayout>

        </RelativeLayout>

        <io.repro.android.message.RoundCornerButton
            android:id="@+id/io_repro_android_message_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/io_repro_android_cta_button_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_portrait"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/io_repro_android_done"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:maxLines="1"
            style="@style/io_repro_android_InAppButton"
            />

        <LinearLayout
            android:id="@+id/io_repro_android_message_button2_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_portrait"
            android:orientation="horizontal"
            android:visibility="gone" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="@dimen/io_repro_android_two_button_distance_div_2">
                <io.repro.android.message.RoundCornerButton
                    android:id="@+id/io_repro_android_message_button_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/io_repro_android_cta_button_height"
                    android:layout_gravity="end"
                    android:text="@string/io_repro_android_done"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:maxLines="1"
                    style="@style/io_repro_android_InAppButton"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/io_repro_android_two_button_distance_div_2">
                <io.repro.android.message.RoundCornerButton
                    android:id="@+id/io_repro_android_message_button_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/io_repro_android_cta_button_height"
                    android:layout_gravity="start"
                    android:text="@string/io_repro_android_done"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:maxLines="1"
                    style="@style/io_repro_android_InAppButton"
                    />
            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/io_repro_android_base_view_padding_bottom_overlay_portrait"
            />

    </LinearLayout>

</RelativeLayout>
