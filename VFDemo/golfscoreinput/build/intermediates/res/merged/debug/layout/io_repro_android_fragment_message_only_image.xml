<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="InconsistentLayout">

    <FrameLayout
        android:id="@+id/io_repro_android_message_image_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/io_repro_android_base_view_content_margin_only_image"
        >
        <io.repro.android.message.AdjustScaledImageView
            android:id="@+id/io_repro_android_message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/io_repro_android_message_close_button"
        android:layout_width="@dimen/io_repro_android_close_button_side_size"
        android:layout_height="@dimen/io_repro_android_close_button_side_size"
        android:layout_alignTop="@id/io_repro_android_message_image_wrapper"
        android:layout_alignRight="@id/io_repro_android_message_image_wrapper"
        android:layout_marginTop="@dimen/io_repro_android_close_button_top_margin_dialog_only_image_under_v17"
        android:layout_marginRight="@dimen/io_repro_android_close_button_right_margin_dialog_only_image_under_v17"
        android:background="@drawable/io_repro_android_close" />
</RelativeLayout>