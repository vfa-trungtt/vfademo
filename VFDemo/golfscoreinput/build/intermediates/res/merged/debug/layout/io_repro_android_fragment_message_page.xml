<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/io_repro_android_message_page_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="InconsistentLayout">

    <ImageView
        android:id="@+id/io_repro_android_message_page_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/io_repro_android_message_page_text_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/io_repro_android_message_page_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/io_repro_android_content_margin_carousel_portrait"
            android:layout_marginTop="@dimen/io_repro_android_image_body_distance_carousel_portrait"
            android:layout_marginRight="@dimen/io_repro_android_content_margin_carousel_portrait"
            android:gravity="center_horizontal"
            android:textSize="@dimen/io_repro_android_text_size_body"
            android:textColor="#303030"
            android:lines="3"
            android:maxLines="3" />

        <io.repro.android.message.RoundCornerButton
            android:id="@+id/io_repro_android_message_page_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/io_repro_android_cta_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/io_repro_android_content_margin_carousel_portrait"
            android:layout_marginTop="@dimen/io_repro_android_body_button_distance_carousel_portrait"
            android:layout_marginRight="@dimen/io_repro_android_content_margin_carousel_portrait"
            android:text="@string/io_repro_android_done"
            android:textColor="@android:color/white"
            android:textSize="@dimen/io_repro_android_text_size_button"
            android:maxLines="1"
            style="@style/io_repro_android_InAppButton"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/io_repro_android_content_margin_carousel_portrait"
            />

    </LinearLayout>

</LinearLayout>
