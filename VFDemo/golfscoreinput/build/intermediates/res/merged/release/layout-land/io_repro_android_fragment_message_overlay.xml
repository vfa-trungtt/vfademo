<?xml version="1.0" ?>
<!-- LANDSCAPE -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/io_repro_android_message_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="InconsistentLayout">

    <LinearLayout
        android:id="@+id/io_repro_android_button_exit_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/io_repro_android_close_button_top_margin_overlay"
        android:layout_marginRight="@dimen/io_repro_android_close_button_right_margin_overlay">

        <ImageView
            android:layout_width="@dimen/io_repro_android_close_button_side_size"
            android:layout_height="@dimen/io_repro_android_close_button_side_size"
            android:background="@drawable/io_repro_android_close" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/io_repro_android_message_content_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:id="@+id/io_repro_android_message_image_wrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/io_repro_android_base_view_content_margin_overlay_landscape">

                <ImageView
                    android:id="@+id/io_repro_android_message_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/io_repro_android_message_text_wrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/io_repro_android_base_view_content_margin_overlay_landscape">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/io_repro_android_message_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_landscape"
                        android:gravity="left"
                        android:textSize="@dimen/io_repro_android_text_size_title"
                        android:textColor="@android:color/white"
                        android:maxLines="3" />

                    <io.repro.android.message.MultiLineTextView
                        android:id="@+id/io_repro_android_message_subtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_landscape"
                        android:gravity="left" />

                </LinearLayout>

                <io.repro.android.message.RoundCornerButton
                    android:id="@+id/io_repro_android_message_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/io_repro_android_cta_button_height"
                    android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_landscape"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/io_repro_android_done"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:maxLines="1"
                    style="@style/io_repro_android_InAppButton"
                    />

                <LinearLayout
                    android:id="@+id/io_repro_android_message_button2_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/io_repro_android_labels_vertical_margin_overlay_landscape"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/io_repro_android_two_button_distance_div_2">

                        <io.repro.android.message.RoundCornerButton
                            android:id="@+id/io_repro_android_message_button_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/io_repro_android_cta_button_height"
                            android:layout_gravity="end"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/io_repro_android_done"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:maxLines="1"
                            style="@style/io_repro_android_InAppButton"
                            />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/io_repro_android_two_button_distance_div_2">

                        <io.repro.android.message.RoundCornerButton
                            android:id="@+id/io_repro_android_message_button_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/io_repro_android_cta_button_height"
                            android:layout_gravity="start"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/io_repro_android_done"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:maxLines="1"
                            style="@style/io_repro_android_InAppButton"
                            />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
