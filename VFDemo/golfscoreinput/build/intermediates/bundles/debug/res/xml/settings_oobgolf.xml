<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:layout="@xml/oob_title_hidden"
        android:title="@string/setting_category_oobgolf_account" >

        <EditTextPreference
            android:key="@string/key_oob_username"
            android:layout="@xml/preference"
            android:summary="@string/setting_summary_username"
            android:title="@string/setting_title_username" />

        <com.asai24.golf.view.PasswordTextPreference
            android:key="@string/key_oob_password"
            android:layout="@xml/preference"
            android:password="true"
            android:summary="@string/setting_summary_password"
            android:title="@string/setting_title_password" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@xml/oob_info"
        android:title="@string/oob_description" />

</PreferenceScreen>