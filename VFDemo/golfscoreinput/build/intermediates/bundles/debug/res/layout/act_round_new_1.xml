<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"

            android:clickable="true"
            android:gravity="right"
            android:nextFocusLeft="@+id/top_back_btn"
            android:nextFocusRight="@+id/top_edit"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_club_new"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_golf_new_ground" />

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/btn_round_new_more_group1"
                    style="@style/background_text_new_group_360_480"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/golf_detail_item_center_selector"
                    android:text="@string/btn_new_round_hide_group_1"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_club_name"
                    style="@style/background_text_new_group_360_480"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/golf_detail_item_center_selector"
                    android:text="@string/btn_club_new_ground"
                    android:textColor="@color/black"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_clup_name"
                style="@style/background_text_new_group_360_480"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/layout_top"
                android:layout_toRightOf="@+id/iv_club_new"
                android:singleLine="false"
                android:text="@string/golf_detail_website_txt"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ln_new_round_hide_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"

                android:clickable="true"
                android:gravity="center"
                android:nextFocusLeft="@+id/top_back_btn"
                android:nextFocusRight="@+id/top_edit"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/btn_address"
                    style="@style/background_text_new_group_360_480"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/golf_detail_item_center_selector"
                    android:text="@string/btn_place_new_ground"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_location_new_ground" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/background_text_new_group_360_480"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/btn_address"
                    android:layout_toRightOf="@+id/imageView2"
                    android:singleLine="true"
                    android:text="@string/golf_detail_website_txt"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:nextFocusLeft="@+id/top_back_btn"
                android:nextFocusRight="@+id/top_edit"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/btn_phone_dial"
                    style="@style/background_text_new_group_360_480"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/golf_detail_item_center_selector"
                    android:text="@string/btn_call_new_ground"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_phone_new_ground" />

                <TextView
                    android:id="@+id/tv_phone_dial"
                    style="@style/background_text_new_group_360_480"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/btn_phone_dial"
                    android:layout_toRightOf="@+id/imageView"
                    android:singleLine="true"
                    android:text="@string/golf_detail_website_txt"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnCourseLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rv_golf_day_link"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"

                    android:layout_weight="1"
                    android:background="@drawable/golf_detail_item_center_selector"
                    android:clickable="true"
                    android:nextFocusLeft="@+id/top_back_btn"
                    android:nextFocusRight="@+id/top_edit"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"

                        android:background="@drawable/ic_launcher_golf_day" />

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/background_text_new_group_360_480"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/imageView5"
                        android:singleLine="true"
                        android:text="@string/btn_course_new_ground"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/gora_reserve_menu_new"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"

                    android:background="@drawable/golf_detail_item_center_selector"
                    android:clickable="true"
                    android:gravity="right"
                    android:nextFocusLeft="@+id/top_back_btn"
                    android:nextFocusRight="@+id/top_edit"

                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/h_rakuten" />

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/background_text_new_group_360_480"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/imageView3"
                        android:singleLine="true"
                        android:text="@string/reserve_by_gora"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>