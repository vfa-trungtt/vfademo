<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/golf_search_item_selector"
    android:descendantFocusability="afterDescendants"
    android:focusable="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_delete_shape_selector"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="11dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/btn_delete"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="club name - course name  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/golf_search_item_clubname_selector"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_course_downloaded_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="34345434636"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/golf_search_item_address_selector" />
    </LinearLayout>

</RelativeLayout>