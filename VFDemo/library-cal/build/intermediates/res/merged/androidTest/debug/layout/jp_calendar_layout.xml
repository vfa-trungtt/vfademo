<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/jp_custom_calendar_title_layout" />

    <include
        android:id="@+id/weekLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/jp_custom_calendar_weeks_layout" />

    <com.imanoweb.calendarview.DayContainerView
        android:id="@+id/daysContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/roboto_calendar_week_1" />

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/roboto_calendar_week_2" />

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/roboto_calendar_week_3" />

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/roboto_calendar_week_4" />

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/roboto_calendar_week_5" />

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/roboto_calendar_week_6" />

    </com.imanoweb.calendarview.DayContainerView>
</LinearLayout>