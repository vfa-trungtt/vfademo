<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:weightSum="7" >

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek1"
        android:text="日"
        android:textColor="#ff726b" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek2"
        android:text="月" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek3"
        android:text="火" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek4"
        android:text="水" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek5"
        android:text="木" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek6"
        android:text="金" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek7"
        android:text="土"
        android:textColor="#11bddc" />

</LinearLayout>