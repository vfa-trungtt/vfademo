<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CalendarView" />

    <style name="CalendarView.MonthTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#705b4c</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarView.DayOfTheWeek">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#705b4c</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="CalendarView.DayOfTheMonth">
        <item name="android:textColor">#705b4c</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">@dimen/minDayCellHeight</item>
    </style>

    <style name="st_cell_date">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top|left</item>
    </style>
</resources>